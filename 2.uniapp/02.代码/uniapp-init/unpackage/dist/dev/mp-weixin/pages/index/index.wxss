.indexContainer .header {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}
.indexContainer .header .logo {
  width: 118rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.indexContainer .header .search {
  position: relative;
  height: 60rpx;
  background-color: #ccc;
  border-radius: 10rpx;
  padding-left: 60rpx;
  flex-grow: 1;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  left: 20rpx;
}
.indexContainer .header .search .searchInput {
  height: 100%;
}
.indexContainer .header .search .searchInput .placeholder {
  font-size: 24rpx;
  text-align: center;
  text-indent: -60rpx;
}
.indexContainer .header .username {
  width: 140rpx;
  height: 60rpx;
  font-size: 24rpx;
  margin: 0 20rpx;
}
.indexContainer .navScroll {
  white-space: nowrap;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  font-size: 28rpx;
  flex-shrink: 0;
  text-align: center;
  line-height: 80rpx;
}
.indexContainer .navScroll .navItem.active {
  border-bottom: 4rpx solid #f00;
}

